<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 여기다가 약 정보 쓰기 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/triple">

            <TextView
                android:id="@+id/medi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tyrenol"
                android:layout_centerInParent="true"
                android:textSize="30dp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/sendReport"
                android:background="#0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/ic_email_black"
                android:text="To doctor"
                android:textSize="15dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#BFE2FC">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="20dp"
                android:text="약 정보"
                android:textSize="16dp"
                android:textColor="@color/table_item_color"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TableRow>
                    <TextView
                        android:id="@+id/dosage_label"
                        android:text="복용량"
                        android:gravity="left"
                        android:textSize="@dimen/table_text_size"
                        android:layout_marginTop="@dimen/table_margin"
                        android:layout_marginBottom="@dimen/table_margin"
                        android:textColor="@color/table_item_color"/>
                    <TextView
                        android:id="@+id/dosage"
                        android:gravity="right"
                        android:text="1일 3회"
                        android:textSize="@dimen/table_text_size"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/remainder_label"
                        android:text="남은 약"
                        android:gravity="left"
                        android:textSize="@dimen/table_text_size"
                        android:layout_marginTop="@dimen/table_margin"
                        android:layout_marginBottom="@dimen/table_margin"
                        android:textColor="@color/table_item_color"/>
                    <TextView
                        android:id="@+id/remainder"
                        android:gravity="right"
                        android:text="0 개"
                        android:textSize="@dimen/table_text_size"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#BFE2FC">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="20dp"
                android:text="알람 정보"
                android:textSize="16dp"
                android:textColor="@color/table_item_color"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TableRow>
                    <TextView
                        android:id="@+id/repeatAlarm_label"
                        android:text="반복"
                        android:gravity="left"
                        android:textSize="@dimen/table_text_size"
                        android:layout_marginTop="@dimen/table_margin"
                        android:layout_marginBottom="@dimen/table_margin"
                        android:textColor="@color/table_item_color"/>
                    <TextView
                        android:id="@+id/repeatAlarm"
                        android:gravity="right"
                        android:text="0 회"
                        android:textSize="@dimen/table_text_size"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/repeatInterval_label"
                        android:text="반복 간격"
                        android:gravity="left"
                        android:textSize="@dimen/table_text_size"
                        android:layout_marginTop="@dimen/table_margin"
                        android:layout_marginBottom="@dimen/table_margin"
                        android:textColor="@color/table_item_color"/>
                    <TextView
                        android:id="@+id/repeatInterval"
                        android:gravity="right"
                        android:text="0 min"
                        android:textSize="@dimen/table_text_size"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/alarmType_label"
                        android:text="알람 종류"
                        android:gravity="left"
                        android:textSize="@dimen/table_text_size"
                        android:layout_marginTop="@dimen/table_margin"
                        android:layout_marginBottom="@dimen/table_margin"
                        android:textColor="@color/table_item_color"/>
                    <TextView
                        android:id="@+id/alarmType"
                        android:gravity="right"
                        android:text="수동"
                        android:textSize="@dimen/table_text_size"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/date_label"
                        android:text="날짜"
                        android:gravity="left"
                        android:textSize="@dimen/table_text_size"
                        android:layout_marginTop="@dimen/table_margin"
                        android:layout_marginBottom="@dimen/table_margin"
                        android:textColor="@color/table_item_color"/>
                    <TextView
                        android:id="@+id/date"
                        android:gravity="right"
                        android:text="2018년 6월 3일"
                        android:textSize="@dimen/table_text_size"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/weekDay_label"
                        android:text="요일"
                        android:gravity="left"
                        android:textSize="@dimen/table_text_size"
                        android:layout_marginTop="@dimen/table_margin"
                        android:layout_marginBottom="@dimen/table_margin"
                        android:textColor="@color/table_item_color"/>
                    <TextView
                        android:id="@+id/weekDay"
                        android:gravity="right"
                        android:text="월 화 수 목 금"
                        android:textSize="@dimen/table_text_size"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:background="@drawable/rounded"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_peekHeight="?attr/actionBarSize"
        app:behavior_hideable="false"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        tools:context="com.example.knight.a2018_mobile.showGraph"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:gravity="center_horizontal"
            app:pstsIndicatorColor="#00ff00"
            app:pstsShouldExpand="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/rounded"/>


        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"
            android:background="#FFFFFF"/>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>